{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "package/**/*"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"],
      "pkg/*": ["./package/*"]
    }
  }
}
